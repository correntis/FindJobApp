{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug NestJS",
        "type": "node",
        "request": "launch",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--inspect-brk", 
          "node_modules/.bin/ts-node", 
          "-r", "tsconfig-paths/register", 
          "src/main.ts"
        ],
        "skipFiles": [
          "<node_internals>/**"
        ],
        "outFiles": [
          "${workspaceFolder}/dist/**/*.js"
        ]
      }
    ]
  }
  